<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.giocoso.administrator.shoom.selftestfragment.selftestchecklist"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        >
        <TextView
            android:layout_width="100dp"
            android:background="#000000"
            android:text="aaa"
            android:textSize="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="250dp"
            android:text="나에게도 장점이 많다."
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:layout_width="200dp"
            android:layout_height="20dp" />
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/checkon1"

            android:background="@android:color/transparent"
            />
        <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
            android:layout_marginTop="20dp"
        android:src="@mipmap/checkon2"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
        />
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/checkon3"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/checkon4"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="right">
            <ImageButton
                android:id="@+id/move_framgment_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="next"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:src="@mipmap/nextbtn"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#1abebd"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>
